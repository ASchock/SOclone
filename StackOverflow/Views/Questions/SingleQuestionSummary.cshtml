@model StackOverflow.Models.QuestionSummaryViewModel

<div class="row">
    <div class="col-lg-2">
        <span class="badge">@Html.DisplayFor(model => model.VoteCount)</span> @(Model.VoteCount == 1 ? "vote" : "votes")
    </div>
    <div class="col-lg-2">
        <span class="badge">@Html.DisplayFor(model => model.AnswerCount)</span> @(Model.AnswerCount == 1 ? "answer" : "answers")
    </div>
    <div class="col-lg-2">
        <span class="badge">@Html.DisplayFor(model => model.ViewCount)</span> @(Model.ViewCount == 1 ? "view" : "views")
    </div>
    <div class="col-lg-4">
        <div class="row">
            <div class="col-lg-12">
                @Html.ActionLink(Model.Title, "Details", new { id = Model.Id })
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <span class="label label-as-badge label-info">@Html.DisplayFor(modelItem => Model.CategoryName)</span>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        Asked @Model.Asked
    </div>
</div>